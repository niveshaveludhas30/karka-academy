#task 3
import math
radius=float(input("Enter the radius of circle:"))
area=math.pi*radius**2
print("The area of the circle is ",area)

#task 4
length=float(input("Enter the length of rectangle:"))
breadth=float(input("Enter the width of the rectangle:"))
area=length*breadth
print("The area of the rectangle is ",area)

#task 5
base=float(input("Enter the base:"))
height=float(input("Enter the height:"))
area=(base*height)/2
print("The area of the triangle is ",area)

#task 6
num1=int(input("Enter the first number:"))
num2=int(input("Enter the second number:"))
addition=num1+num2
subtraction=num1-num2
multiplication=num1*num2
division=num1/num2
print("The sum of two numbers is ",addition)
print("The difference of two numbers is ",subtraction)
print("The product of two numbers is ",multiplication)
print("The quotient of two numbers is",division)

