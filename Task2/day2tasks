#task 10
rainy=True
shopping=False
print(rainy and shopping)
print(rainy or shopping)
print(not shopping)
print(not rainy)

#task 11
#using third variable
var1=50
var2=100
print("The variable one before swapping is a=",var1)
print("The variable two before swapping is b=",var2)
var3=var1
var1=var2
var2=var3
print("Variable one after swapping is a=",var1)
print("Variable two after swapping is b=",var2)
#without using third variable
var1=50
var2=100
var1,var2=var2,var1
print("Swapping without using third variable:")
print("Variable one after swapping x=",var1)
print("Variable two after swapping y=",var2)

#task 12
first=float(input("Enter the first number:"))
second=float(input("Enter the second number:"))
third=float(input("Enter the third number:"))
average=(first+second+third)/3
print("The average of the three numbers is ",average)

#task 13
